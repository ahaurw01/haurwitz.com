body
  background-image url('../img/wild_oliva.png')
  color #DDD
  font-family "Monda", "Helvetica Neue", Helvetica, Arial, sans-serif

h1, h2, h3, h4, h5, h6
  font-family "Monda", "Helvetica Neue", Helvetica, Arial, sans-serif

h1
  font-size 36px

a
  color #CE66E3

a:hover
  text-decoration none
  color #D1008C

.go-home a
  text-decoration none
  color #23D100

blockquote:before
  content "\f10d"
  font-family "FontAwesome"
  font-weight normal
  font-style normal
  display inline-block
  font-size 40px
  position absolute
  top 0
  left 0

blockquote
  border-left none
  position relative
  padding-top 15px
  padding-left 60px
  margin-left 30px
  font-style italic