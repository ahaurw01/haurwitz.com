body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
  margin 0
  color #333

h1, h2, h3, p
  font-weight 300

p
  line-height 1.3

a
  color #14b1e4
  text-decoration none

.title-hero
  display flex
  align-items center
  justify-content center
  flex-direction column
  background-color #F2F2F2
  padding 0 0 50px

  h1
    margin 20px 0 0

  h2
    margin 10px 0 0
    color #888

  .contact-menu
    list-style none
    margin 15px 0 30px
    padding 0
    display flex
    width 100%
    justify-content center
    
    @media (min-width: 768px)
      justify-content flex-end
      li:last-of-type
        margin-right 40px

    a
      margin 3px 12px

.avatar
  border-radius 50%
  width 150px
  height 150px
  overflow hidden
  margin 0 10px

  img
    width 100%

.card
  display flex
  flex-direction column
  border 1px solid #DDD
  border-radius 4px
  width 300px
  margin 40px auto
  box-shadow 0 15px 15px -5px rgba(10, 10, 10, 0.2)

  .card-media
    img
      width 100%
      border-top-left-radius 4px
      border-top-right-radius 4px

  .card-text
    padding 0 25px
